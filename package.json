{
  "private": true,
  "version": "2.1.0",
  "scripts": {
    "build": "ng-packagr -p src/ng-package.json",
    "postbuild": "npm run build:readme",
    "build:readme": "copyfiles README.md dist/lib",
    "lint": "tslint --project tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "collectCoverage": false,
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)$"
  },
  "dependencies": {
    "rxjs": "^6.0.0"
  },
  "devDependencies": {
    "@angular/compiler": "^7.2.15",
    "@angular/compiler-cli": "^7.2.15",
    "@angular/core": "^7.2.15",
    "@types/chai": "^4.1.4",
    "@types/core-js": "^2.5.0",
    "@types/jest": "^23.3.0",
    "@types/node": "^8.10.21",
    "babel-core": "^6.26.3",
    "chai": "^4.1.2",
    "copyfiles": "^2.1.0",
    "jest": "^25.0.0",
    "jest-cli": "^25.0.0",
    "ng-packagr": "^10.1.1",
    "sinon": "^6.1.4",
    "sinon-chai": "^3.2.0",
    "ts-jest": "^23.0.1",
    "tsickle": "^0.32.0",
    "tslib": "^1.9.3",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "3.2.2",
    "zone.js": "~0.8.26"
  }
}
